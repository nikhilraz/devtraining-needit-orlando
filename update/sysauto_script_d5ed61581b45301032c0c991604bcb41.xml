        <script><![CDATA[var longOverDueDays=gs.getProperty('x_58872_needit.autoCloseOverdue');

var NITask=new GlideRecord('x_58872_needit_needit_task');
NITask.addQuery('due_date','<=',gs.daysAgo(longOverDueDays));
NITask.addQuery('state','<',3);
NITask.query();

while(NITask.next()){
	gs.info('Long overdue Task: '+NITask.number);
	NITask.state=4;
	NITask.work_notes="Task is closed incomplete: passed overdue date";
	NITask.update();
}]]></script>
